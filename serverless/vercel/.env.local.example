# Vercel Edge Functions Environment Variables
# Copy to .env.local for local development

# Node Environment
NODE_ENV=development
LOG_LEVEL=debug

# Default Settings
DEFAULT_CURRENCY=KES
DEFAULT_COUNTRY=KE
DEFAULT_PROVIDER=mpesa

# M-Pesa Configuration
MPESA_ENABLED=true
MPESA_SANDBOX=true
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here
MPESA_PASSKEY=your_passkey_here
MPESA_SHORT_CODE=174379
MPESA_ENV=sandbox

# Paystack Configuration
PAYSTACK_ENABLED=false
PAYSTACK_SECRET_KEY=sk_test_your_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_key_here
PAYSTACK_SANDBOX=true

# IntaSend Configuration
INTASEND_ENABLED=false
INTASEND_PUBLIC_KEY=your_public_key
INTASEND_SECRET_KEY=your_secret_key
INTASEND_TEST_MODE=true

# MTN MoMo Configuration
MTN_MOMO_ENABLED=false
MTN_MOMO_API_USER=your_api_user
MTN_MOMO_API_KEY=your_api_key
MTN_MOMO_SUBSCRIPTION_KEY=your_subscription_key
MTN_MOMO_ENV=sandbox

# Airtel Money Configuration
AIRTEL_MONEY_ENABLED=false
AIRTEL_MONEY_CLIENT_ID=your_client_id
AIRTEL_MONEY_CLIENT_SECRET=your_client_secret
AIRTEL_MONEY_ENV=sandbox

# Security
ENCRYPTION_KEY=your_32_char_encryption_key
WEBHOOK_SECRET=your_webhook_secret
API_KEYS="dev-key-1,dev-key-2"
ALLOWED_IPS=""

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000
API_KEY_RATE_LIMIT=1000

# Feature Flags
CACHE_ENABLED=true
IDEMPOTENCY_ENABLED=true
CIRCUIT_BREAKER_ENABLED=true

# Vercel KV (set automatically when KV is linked)
# KV_REST_API_URL=https://...
# KV_REST_API_TOKEN=...

# Vercel Edge Config (set automatically when Edge Config is linked)
# EDGE_CONFIG=...
